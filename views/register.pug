extends base

block primary 
    if error
        .alert.alert-danger
            p= error
            if errorList
                ul
                    each val in errorList 
                        li=val 

    form(action="", method="post") 
        .mb-3 
            label.form-label(for="email-input") Email address 
            input#email-input.form-control(type="email", name="email")

        .mb-3 
            label.form-label(for="user-input") Username 
            input#user-input.form-control(type="text", name="user")

        .mb-3 
            label.form-label(for="password-input") Password 
            input#password-input.form-control(type="password", name="password")

        button.btn.btn-primary(type="submit") Submit