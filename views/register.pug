extends base

block primary 
    h2 Register
    p Fill in the form below to create a new account. #[a(href="/auth/login") Click here] to log in with an existing account.

    if error
        .alert.alert-danger
            p.mb-0= error
            if errorList
                ul.mb-0
                    each val in errorList 
                        li=val 

    form(action="", method="post") 
        .mb-3 
            label.form-label(for="email-input") Email address 
            input#email-input.form-control(type="email", name="email")

        .mb-3 
            label.form-label(for="user-input") Username 
            input#user-input.form-control(type="text", name="userId")

        .mb-3 
            label.form-label(for="password-input") Password 
            input#password-input.form-control(type="password", name="password")

        button.btn.btn-primary(type="submit") Submit