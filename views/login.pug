extends base

block primary 
    h2 Log In
    p Fill in the form below to log in with an existing account. #[a(href="/auth/register") Click here] to register instead.

    if needLogin 
        .alert.alert-primary You must log in to access this content.

    if error 
        .alert.alert-danger=error

    form(action="", method="post") 
        .mb-3 
            label.form-label(for="user-input") Username 
            input#user-input.form-control(type="text", name="userId")

        .mb-3 
            label.form-label(for="password-input") Password 
            input#password-input.form-control(type="password", name="password")
        button.btn.btn-primary(type="submit") Submit